#include <WinSock2.h>
#include <Windows.h>

// clang-format off

constexpr wchar_t kServiceName[] = L"@BROKER_SERVICE_NAME@";                 // Internal name of the service
constexpr wchar_t kServiceDisplayName[] = L"@BROKER_SERVICE_DISPLAY_NAME@";  // Displayed name of the service
constexpr wchar_t kServiceDescription[] = L"@BROKER_SERVICE_DESCRIPTION@";   // Displayed description of the service
constexpr DWORD kServiceStartType = @BROKER_SERVICE_C_START_TYPE@;           // Service start options
constexpr DWORD kServiceErrorControl = @BROKER_SERVICE_C_ERROR_CONTROL@;

